<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns=http://www.springframework.org/schema/beans
        xmlns:xsi="http://www.3w.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
                            http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resoursce="loggers.xml">

    <bean id="client" class="com.yet.spring.core.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg vaelue="John Smith"/>
    </bean>

    <bean id="app" class="com.yet.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="com.yet.spring.core.loggers.Event" scopy="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>